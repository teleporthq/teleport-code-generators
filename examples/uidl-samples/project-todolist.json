{
  "$schema": "https://raw.githubusercontent.com/teleporthq/teleport-code-generators/master/src/uidl-definitions/schemas/project.json",
  "name": "myVueProject",
  "root": {
    "name": "App",
    "stateDefinitions": {
      "router": {
        "type": "router",
        "defaultValue": "index",
        "values": [
          {
            "value": "index",
            "meta": {
              "componentName": "Home"
            }
          }
        ]
      }
    },
    "content": {
      "type": "state",
      "name": "router",
      "states": [
        {
          "value": "index",
          "content": {
            "type": "group",
            "name": "container",
            "children": [
              {
                "type": "TodoList",
                "name": "todos-container",
                "dependency": {
                  "type": "local"
                }
              }
            ]
          }
        }
      ]
    }
  },
  "components": {
    "TodoList": {
      "name": "TodoList",
      "stateDefinitions": {
        "todos": {
          "type": "array",
          "defaultValue": ["Eat", "Sleep", "Code", "Repeat"]
        }
      },
      "content": {
        "type": "container",
        "name": "container",
        "repeat": {
          "content": {
            "type": "Todo",
            "name": "todo",
            "attrs": {
              "todo": {
                "type": "dynamic",
                "content": {
                  "referenceType": "local",
                  "id":"item" 
                }
              },
              "index": {
                "type": "dynamic",
                "content": {
                  "referenceType": "local",
                  "id":"index" 
                }
              }
            },
            "events": {
              "onDelete": [{
                "type": "stateChange",
                "modifies": "todos",
                "newState": ["Eat", "Sleep"]
              }]
            },
            "dependency": {
              "type": "local"
            }
          },
          "dataSource": "todos",
          "meta": {
            "useIndex": true
          }
        },
        "children": [{
          "type": "container",
          "name": "add-new",
          "children": [{
            "type": "textinput",
            "name": "input"
          },{
            "type": "button",
            "name": "add-item",
            "children": ["Add Item"],
            "events": {
              "onClick": [{
                "type": "stateChange",
                "modifies": "todos",
                "newState": ["Eat", "Sleep", "Code"]
              }]
            }
          }]
        }]
      }
    },
    "Todo": {
      "name": "Todo",
      "propDefinitions": {
        "todo": {
          "type": "string",
          "defaultValue": ""
        },
        "index": {
          "type": "number",
          "defaultValue": 0
        },
        "onDelete": {
          "type": "func",
          "defaultValue": ""
        }
      },
      "content": {
        "type": "container",
        "name": "todo-item",
        "style": {
          "margin": "10px",
          "width": "150px;",
          "border-bottom": "1px solid gray"
        },
        "children": [
          "$props.todo",
          {
            "type": "button",
            "name": "delete",
            "style": {
              "float": "right"
            },
            "events": {
              "onClick": [{
                "type": "propCall",
                "calls": "onDelete",
                "args": [0]
              }]
            },
            "children": ["Remove Item"]
          }
        ]
      }
    }
  }
}