{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "component.json",
  "title": "Component UIDL",
  "type": "object",
  "required": ["name", "content"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "default": "MyComponent"
    },
    "content": {
      "$ref": "#/definitions/content"
    },
    "meta": {
      "type": "object"
    },
    "stateDefinitions": {
      "$ref": "#/definitions/stateDefinitions"
    },
    "propDefinitions": {
      "$ref": "#/definitions/propDefinitions"
    }
  },
  "definitions": {
    "content": {
      "type": "object",
      "required": [
        "type"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "default": "container"
        },
        "name": {
          "type": "string",
          "default": "container"
        },
        "states": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["value", "content"],
            "additionalProperties": false,
            "properties": {
              "value": {
                "oneOf": [
                  {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["matchingCriteria", "conditions"],
                    "properties": {
                      "conditions": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": ["operation"],
                          "additionalProperties": false,
                          "properties": {
                            "operation": { "type": "string" },
                            "operand": { }
                          }
                        }
                      },
                      "matchingCriteria": { "type": "string", "enum": ["all", "any"] }
                    }
                  },
                  { "type": "boolean" },
                  { "type": "number" },
                  { "type": "string" }
                ]
              },
              "content": {
                "oneOf": [
                  { "$ref": "#/definitions/content" },
                  { "type": "string" }
                ]
              }
            }
          }
        },
        "repeat": {
          "type": "object",
          "additionalProperties": false,
          "required": ["content", "dataSource"],
          "properties": {
            "content": { "$ref": "#/definitions/content" },
            "dataSource": {
              "oneOf": [
                { "type": "string" },
                { "type": "array" }
              ]
            },
            "meta": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "useIndex": { "type": "boolean" },
                "iteratorName": { "type": "string" },
                "dataSourceIdentifier": { "type":"string" }
              }
            }
          }
        },
        "dependency": {
          "$ref": "#/definitions/dependency"
        },
        "events": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type"],
                "additionalProperties": false,
                "properties": {
                  "type": { "type": "string", "enum": ["stateChange", "propCall"] },
                  "modifies": { "type": "string" },
                  "newState": { },
                  "calls": { "type": "string" },
                  "args": { "type": "array" }
                }
              }
            }
          }
        },
        "style": {
          "$ref": "#/definitions/style"
        },
        "attrs": {
          "type": "object"
        },
        "children": {
          "type": "array",
          "items": {
            "oneOf": [
              { "$ref": "#/definitions/content" },
              { "type": "string" }
            ]
          },
          "default": []
        }
      }
    },
    "style": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "$ref": "#/definitions/style"
            }
          ]
        }
      }
    },
    "dependency": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["package", "local", "library"],
          "examples": ["package", "local", "library"]
        },
        "path": {"type": "string"},
        "version": {"type": "string", "default": "1.0.0"},
        "meta": {
          "type": "object", 
          "additionalProperties": false,
          "properties": {
            "namedImport": {"type": "boolean", "default": false},
            "originalName": {"type": "string"}
          }
        }
      }
    },
    "propDefinitions": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type"],
          "properties": {
            "type": {"type": "string", "enum": ["string", "boolean", "number", "array", "func", "object", "children"]},
            "defaultValue": {},
            "meta": {"type": "object"}
          }
        }
      }
    },
    "stateDefinitions": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "defaultValue"],
          "properties": {
            "type": {"type":"string", "enum": ["string", "boolean", "number", "object", "func", "array", "router"]},
            "values": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "value": {},
                  "meta": { 
                    "type": "object",
                    "properties": {
                      "componentName": { "type": "string" },
                      "path": { "type": "string" },
                      "fileName": { "type": "string" }
                    }
                  },
                  "transitions": { "type": "object" }
                }
              }
            },
            "defaultValue": {},
            "actions": {"type": "array"}
          }
        }
      }
    }
  }
}