{
  "elements": {
    "container": {
      "type": "div"
    },
    "group": {
      "type": "div"
    },
    "main": {
      "type": "main"
    },
    "header": {
      "type": "header"
    },
    "nav": {
      "type": "nav"
    },
    "section": {
      "type": "section"
    },
    "article": {
      "type": "article"
    },
    "aside": {
      "type": "aside"
    },
    "footer": {
      "type": "footer"
    },
    "text": {
      "type": "span"
    },
    "textblock": {
      "type": "p"
    },
    "strongtext": {
      "type": "strong"
    },
    "formattedtext": {
      "type": "pre"
    },
    "label": {
      "type": "label"
    },
    "heading1": {
      "type": "h1"
    },
    "heading2": {
      "type": "h2"
    },
    "heading3": {
      "type": "h3"
    },
    "heading4": {
      "type": "h4"
    },
    "heading5": {
      "type": "h5"
    },
    "heading6": {
      "type": "h6"
    },
    "image": {
      "type": "img",
      "attrs": {
        "src": { "type": "dynamic", "content": { "referenceType": "attr", "id": "url" } }
      }
    },
    "textinput": {
      "type": "input",
      "attrs": {
        "type": { "type": "static", "content": "text" }
      }
    },
    "passwordinput": {
      "type": "input",
      "attrs": {
        "type":  { "type":"static", "content": "password"}
      }
    },
    "numberinput": {
      "type": "input",
      "attrs": {
        "type": { "type": "static", "content": "number" }
      }
    },
    "checkbox": {
      "type": "input",
      "attrs": {
        "type": { "type": "static", "content": "checkbox" }
      }
    },
    "radiobutton": {
      "type": "input",
      "attrs": {
        "type": { "type": "static", "content": "radio" }
      }
    },
    "textarea": {
      "type": "textarea"
    },
    "link": {
      "type": "a",
      "attrs": {
        "href": { "type": "dynamic", "content": { "referenceType": "attr", "id": "url" } },
        "target": {
          "type": "static",
          "content": "_blank"
        }
      }
    },
    "button": {
      "type": "button"
    },
    "form": {
      "type": "form",
      "attrs": {
        "method": { "type": "dynamic", "content": { "referenceType": "attr", "id": "type" } },
        "action": { "type": "dynamic", "content": { "referenceType": "attr", "id": "url" } }
      }
    },
    "list": {
      "type": "ul",
      "repeat": {
        "content": {
          "type": "li",
          "name": "item",
          "children": ["$local.item"]
        },
        "dataSource": { "type": "dynamic", "content": { "referenceType": "attr", "id": "items" } },
        "meta": {
          "useIndex": true
        }
      }
    },
    "dropdown": {
      "type": "select",
      "repeat": {
        "content": {
          "type": "option",
          "name": "option",
          "children": ["$local.item"]
        },
        "dataSource": { "type": "dynamic", "content": { "referenceType": "attr", "id": "options" } }
      }
    },
    "video": {
      "type": "video",
      "children": [
        "$children",
        "This browser does not support the video formats given"
      ]
    },
    "audio": {
      "type": "audio",
      "children": [
        "$children",
        "This browser does not support the audio formats given"
      ]
    },
    "picture": {
      "type": "picture",
      "children": [
        "$children",
        "This browser does not support the image formats given"
      ]
    },
    "source": {
      "type": "source",
      "attrs": {
        "src": { "type": "dynamic", "content": { "referenceType": "attr", "id": "url" } }
      }
    },
    "svg": {
      "type": "svg"
    },
    "line": {
      "type": "hr"
    }
  },
  "events": {
    "click": "onclick"
  }
}