{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "new-component.json",
    "name": "New Component UIDL",
    "type": "object",
    "required": ["name", "node"],
    "additionalProperties": false,
    "properties": {
        "$schema": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string",
          "default": "MyComponent"
        },
        "node": {
            "$ref": "#/definitions/node"
          },
        "meta": {
          "type": "object"
        },
        "stateDefinitions": {
          "$ref": "#/definitions/stateDefinitions"
        },
        "propDefinitions": {
          "$ref": "#/definitions/propDefinitions"
        }
      },
      "definitions": {
        "dependency": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["package", "local", "library"],
              "examples": ["package", "local", "library"]
            },
            "path": {"type": "string"},
            "version": {"type": "string", "default": "1.0.0"},
            "meta": {
              "type": "object", 
              "additionalProperties": false,
              "properties": {
                "namedImport": {"type": "boolean", "default": false},
                "originalName": {"type": "string"}
              }
            }
          }
        },
        "propDefinitions": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type"],
              "properties": {
                "type": {"type": "string", "enum": ["string", "boolean", "number", "array", "func", "object", "children"]},
                "defaultValue": {},
                "meta": {"type": "object"}
              }
            }
          }
        },
        "stateDefinitions": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type", "defaultValue"],
              "properties": {
                "type": {"type":"string", "enum": ["string", "boolean", "number", "object", "func", "array", "router"]},
                "values": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "value": {},
                      "meta": { 
                        "type": "object",
                        "properties": {
                          "componentName": { "type": "string" },
                          "path": { "type": "string" },
                          "fileName": { "type": "string" }
                        }
                      },
                      "transitions": { "type": "object" }
                    }
                  }
                },
                "defaultValue": {},
                "actions": {"type": "array"}
              }
            }
          }
        },
        "style": {},
        "node": {
          "oneOf": [{
            "$ref": "#/definitions/staticValue" 
          },{
            "$ref": "#/definitions/dynamicReference"
          },{
            "$ref": "#/definitions/repeatNode" 
          },{
           "$ref": "#/definitions/elementNode"
          },{
            "$ref": "#/definitions/conditionalNode"
          }]
        },
        "staticValue": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "type", "content" ],
          "properties": {
            "type": {
              "type": "string",
              "enum":  ["static"]
              },
            "content": { 
              "oneOf": [ 
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" },
                { "type": "array"} 
              ] 
            }
          }
        },
        "dynamicReference": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "type", "content" ],
          "properties": {
            "type": {
              "type": "string",
              "enum":  ["dynamic"]
            },
            "content": { 
              "required": [ "referenceType", "id" ],
              "additionalProperties": false,
              "referenceType" :{
                "type": "string",
                "enum":  ["prop", "state", "local", "attr"]
              },
              "id": { "type": "string" }
            }
          }
        },
        "repeatNode": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "type", "content" ],
          "properties": {
            "type": {
              "type": "string",
              "enum":  ["repeat"]
            },
            "content": {
              "$ref": "#/definitions/repeatContent"
            }
          }
        },
        "repeatContent": {
          "type": "object",
          "required": [ "node", "dataSource" ],
          "properties": {
            "node":{ "$ref": "#/definitions/node"},
            "dataSource":{"$ref": "#/defintions/attributeValue"},
            "meta": {
              "type":"object",
              "properties": {
                "useIndex": {
                  "type": "boolean"
                },
                "iteratorName": {
                  "type": "string"
                },
                "dataSourceIdentifier": {
                  "type": "string"
                }
              }
            }
          }
        },
        "attributeValue": {
          "oneOf": [
            {"$ref":"#/definitions/dynamicReference"},
            {"$ref":"#/definitions/staticValue"}
          ]
        },
        "conditionalNode":{
          "type": "object",
          "additionalProperties": false,
          "required": [ "type", "content" ],
          "properties": {
            "type": {
              "type": "string",
              "enum":  ["conditional"]
            },
            "content": {
              "type":"object",
              "required": [ "node", "reference" ],
              "properties": {
                "node":{ "$ref": "#/definitions/node"},
                "reference":{"$ref":"#/definitions/dynamicReference"},
                "value": {
                  "oneOf": [ 
                    { "type": "string" },
                    { "type": "number" },
                    { "type": "boolean" }
                  ]
                },
                "condition": {"$ref":"#/definitions/conditionalExpression"}
              }
            }
          }
        },
        "conditionalExpression":{
          "type":"object",
          "required": ["conditions"],
          "additionalProperties": false,
          "properties": {
            "conditions":  {
              "type":"array",
              "items": {
                "type":"object",
                "required": ["operation"],
                "additionalProperties": false,
                "properties": {
                  "operation": {
                    "type": "string"
                  }, 
                  "operand": {
                    "oneOf": [ 
                      { "type": "string" },
                      { "type": "number" },
                      { "type": "boolean" }
                    ]
                  }
                }
              }
            },
            "matchingCriteria": { "type": "string" }
          }
        },
        "elementNode": {
          "type":"object",
          "required": ["type", "content"],
          "additionalProperties": false,
          "properties": { 
            "type": {
              "type":"object",
              "enum": ["element"]
            },
            "content": { "$ref": "#/definitions/element"}
          }
        },
        "element": {
          "type": "object",
          "required": ["elementType"],
          "additionalProperties": false,
          "properties": {
            "elementType":{},
            "name": {},
            "key": {},
            "dependency": {},
            "style": {},
            "attrs": {},
            "events": {},
            "children": {}
          }
        }
    }
}