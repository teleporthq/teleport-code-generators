{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "typeRoots" : [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "examples",
    "node_modules",
    "**/dist/**",
    "./__tests__/**/*"
  ]
}
